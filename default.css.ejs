@import "<%- basedir -%>/node_modules/normalize.css/normalize.css";
@import "<%- basedir -%>/node_modules/github-markdown-css/github-markdown.css";
@import "<%- basedir -%>/fonts/merriweather.css";
@import "<%- basedir -%>/fonts/roboto_mono.css";

.markdown-body {
    font-family: 'Merriweather';
    hyphens: auto;
}

.markdown-body code,
.markdown-body kbd,
.markdown-body pre {
    font-family: 'Roboto Mono';
}

@page {
    size: A4;
    margin-top: 2cm;
    margin-bottom: 2cm;
    margin-left: 3cm;
    margin-right: 1.5cm;
}

.markdown-body h1, h2, h3, h4, h5 {
    page-break-after: avoid;
    page-break-inside: avoid;
}

.markdown-body h1:not(:first-of-type) {
    page-break-before: always;
}

.markdown-body p {
    text-align: justify;
}
